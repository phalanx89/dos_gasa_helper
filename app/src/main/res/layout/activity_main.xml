<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlyContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff">

        <RelativeLayout
            android:id="@+id/rlyTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#14656c">

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/btn_menu_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnLocation"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="현재위치" />
            </LinearLayout>
        </RelativeLayout>

        <GridLayout
            android:id="@+id/glyCategory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlyTitle"
            android:layout_centerHorizontal="true"
            android:rowCount="3"
            android:columnCount="2"
            android:orientation="horizontal"
            android:useDefaultMargins="true">
            <ImageView
                android:id="@+id/btnCleaning"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/btn_category_selector"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/btnLaundry"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/btn_category_selector"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/btnCarWash"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/btn_category_selector"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/btnDishWashing"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/btn_category_selector"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/btnPet"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/btn_category_selector"
                android:clickable="true"/>
        </GridLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llyMenu"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#ccbbbbbb"
        android:orientation="vertical"
        android:translationX="-150dp">

        <RelativeLayout
            android:id="@+id/rlyUserInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/imgUserImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/default_user" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgUserImage"
                    android:text="유저이름"
                    android:textColor="#ffffffff" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnSignUp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:src="@drawable/btn_signup_selector" />

                <ImageView
                    android:id="@+id/btnSignIn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:src="@drawable/btn_signin_selector" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
